    flex-direction: column;
    align-items: center;
    align-content: center;

    width: 80%;
}

div.settings-buttons-bottom {
    position-type: absolute;
    bottom: 0px;

    flex-direction: column;
    align-items: center;
    align-content: center;

    width: 80%;
}


